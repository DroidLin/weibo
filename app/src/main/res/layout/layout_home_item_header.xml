<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="statuses"
            type="com.open.weibo.bean.Statuses" />

        <import type="com.open.weibo.utils.HBindingAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatarView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{clickListener::onClick}"
            app:cornerUrl="@{statuses.user.profile_image_url}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:themeImageView="@{null}" />

        <TextView
            android:id="@+id/avatarName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@{statuses.user.screen_name}"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/avatarDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatarView"
            app:layout_constraintTop_toTopOf="@id/avatarView"
            app:themeTextView="@{null}" />

        <TextView
            android:id="@+id/avatarDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@{statuses.created_at}"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/avatarView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatarView"
            app:layout_constraintTop_toBottomOf="@id/avatarName"
            app:themeTextView="@{null}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>